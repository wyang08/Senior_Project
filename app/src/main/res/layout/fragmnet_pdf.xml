<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PDFFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">



    <EditText
        android:id="@+id/image_url"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="No File Selected Yet"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:autofillHints=""/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="Name"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/user_vaccine"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="Vaccine Name"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="50dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/user_date"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:hint="Date: 4/20/2021"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="50dp"
        android:gravity="center" />


    <ImageView
        android:id="@+id/file_search"
        android:layout_width="58dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="420dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nicepng_uc_browser_png_9078783" />

    <ImageView
        android:id="@+id/file_logo"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="420dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_67px_pdf_file_icon_svg" />

    <ImageView
        android:id="@+id/cancel_file"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="220dp"
        android:layout_marginVertical="410dp"
        app:layout_constraintBottom_toTopOf="@+id/file_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_offline" />

    <Button
        android:id="@+id/submit_pdf"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="500dp"
        android:text="@string/upload_file"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:iconTint="@color/blue" />


</RelativeLayout>